{
  "manifest_version": 3,
  "name": "Briefly",
  "version": "1.0.0",
  "description": "Chrome extension for summarizing meetings in real-time. Convert spoken discussions into concise, structured summaries with key points and action items.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["src/content.jsx"],
      "matches": ["*://*.github.com/*"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/*", 
      "*.js", 
      "*.css",
      "@vite/*",
      "@crx/*",
      "src/*",
      "/@vite/*",
      "/@crx/*"
    ],
    "matches": [
      "http://localhost:5173/*",
      "*://*.github.com/*"
    ]
  }],
  "host_permissions": [
    "http://localhost:5173/*",
    "*://*.github.com/*"
  ],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  }
}